<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_116"
    android:padding="24dp">

    <!-- Icon Setting -->
    <ImageView
        android:id="@+id/imgSetting_116"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:src="@drawable/hoa_116"
        android:scaleType="centerCrop"
        android:contentDescription="Settings"/>

    <!-- Avatar hoặc Icon User -->
    <ImageView
        android:id="@+id/imgAvatar_116"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo_116"
        android:scaleType="centerCrop"
        android:contentDescription="Avatar"/>

    <TextView
        android:id="@+id/tvProfileTitle_116"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY PROFILE"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgAvatar_116"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_dark_116"/>

    <!-- Card chứa thông tin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProfileTitle_116"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:background="@drawable/card_background_116"
        android:padding="20dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvUsername_116"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username: Linh_116"
            android:textSize="18sp"
            android:textColor="@color/text_dark_116"
            android:padding="12dp"
            android:drawableStart="@android:drawable/ic_menu_myplaces"
            android:drawablePadding="12dp"
            android:drawableTint="@color/yellow_116"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:id="@+id/tvPassword_116"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password: ********"
            android:textSize="18sp"
            android:textColor="@color/text_dark_116"
            android:padding="12dp"
            android:drawableStart="@android:drawable/ic_lock_idle_lock"
            android:drawablePadding="12dp"
            android:drawableTint="@color/pink_vibrant_116"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:id="@+id/tvEmail_116"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: linh@student.edu.vn"
            android:textSize="18sp"
            android:textColor="@color/text_dark_116"
            android:padding="12dp"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:drawablePadding="12dp"
            android:drawableTint="@color/yellow_116"/>

    </LinearLayout>

</RelativeLayout>